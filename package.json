{
  "name": "idx-porter",
  "version": "1.0.0",
  "description": "TypeScript library for generating IDX V4.5 protocol files for ECAD/MCAD collaboration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "verify-setup": "node scripts/verify-setup.js",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "idx",
    "ecad",
    "mcad",
    "pcb",
    "collaboration",
    "xml",
    "typescript"
  ],
  "author": "IDXPorter Team",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "@flatten-js/core": "^1.6.10",
    "tslib": "^2.8.1",
    "xmlbuilder2": "^3.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/idx-porter.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/idx-porter/issues"
  },
  "homepage": "https://github.com/your-org/idx-porter#readme"
}
